@model IEnumerable<AquariumMVC.Models.alldetail>

@{
    ViewData["Title"] = "editProductDetail";
    Layout = "~/Views/Shared/admin.cshtml";
}

<h1>editProductDetail</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.P_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Memo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Img)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kind)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.P_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Memo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Img)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kind)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                    <a asp-action="editProductDetailData" asp-route-aid="@item.A_id" asp-route-fPId="@item.P_id">Edit</a> |
                    <p><a href="#" onclick="confirm_delete(this)" data-pid="@item.P_id" data-aid="@item.A_id"> delete</a></p>
            </td>
        </tr>
}
    </tbody>
</table>
<script>
    function confirm_delete(buttonElement) {
        var pid = buttonElement.getAttribute('data-pid');
        var aid = buttonElement.getAttribute('data-aid');
        if (confirm("您確定要刪除嗎？")) {
            var url = '@Url.Action("delete_Product", "Back")' + '?pid=' + pid+'&aid='+aid;
            window.location.href = url;
        }
    }
</script>
