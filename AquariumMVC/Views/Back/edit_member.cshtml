@model AquariumMVC.DTO.memberDTO
@{
    ViewData["Title"] = "edit_member";
    Layout = "~/Views/Shared/admin.cshtml";
}
@if (ViewBag.msg != null)
{
    <script>
        window.onload = function () {
            var msg = "@Html.Raw(ViewBag.msg)";
            alert(msg);

        };
    </script>
}

<h1>Edit Member</h1>

<form asp-action="edit_member">
    <div class="form-group">
        <label asp-for="Account" class="control-label"></label>
        <input asp-for="Account" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" type="email" />
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IsAdmin" class="control-label"></label>
        @Html.DropDownListFor(model => model.IsAdmin,
        new SelectList(new List<Object>{
        new { value = true, text = "是" },
        new { value = false, text = "否" }
        }, "value", "text"),
        new { @class = "form-control" }
        )
    <input type="submit" value="Save" class="btn btn-primary" />
</form>

